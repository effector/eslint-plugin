{
  "compilerOptions": {
    "skipLibCheck": true,
    "esModuleInterop": true,

    "target": "ESNext",

    "moduleDetection": "force",
    "moduleResolution": "bundler",

    "isolatedModules": true,
    "verbatimModuleSyntax": true,

    "strict": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,

    "module": "preserve",
    "noEmit": true,

    "lib": ["ESNext"]
  }
}
